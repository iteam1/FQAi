# ============================================
# REPLICA-SPECIFIC VARIABLES
# ============================================
# Change these values for each replica instance:
# - REPLICA_ID=1 → Ports: 8001, 8081, 6061, 50051, 7474, 7687
# - REPLICA_ID=2 → Ports: 8002, 8082, 6062, 50052, 7475, 7688
# - REPLICA_ID=3 → Ports: 8003, 8083, 6063, 50053, 7476, 7689

REPLICA_ID=1

# FastAPI Backend
BACKEND_PORT=8001

# Weaviate (Vector Database)
WEAVIATE_CONTAINER_NAME="weaviate-${REPLICA_ID}"
WEAVIATE_HTTP_PORT=8081
WEAVIATE_METRICS_PORT=6061
WEAVIATE_GRPC_PORT=50051
VOLUME_WEAVIATE_DATA="weaviate-data-${REPLICA_ID}"

# Neo4j (Graph Database)
NEO4J_CONTAINER_NAME="neo4j-${REPLICA_ID}"
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
VOLUME_NEO4J_DATA="neo4j-data-${REPLICA_ID}"
VOLUME_NEO4J_LOGS="neo4j-logs-${REPLICA_ID}"
VOLUME_NEO4J_IMPORT="neo4j-import-${REPLICA_ID}"


# General configuration
NETWORK_NAME="fqa-network"


# Cadvisor's configuration
CADVISOR_CONTAINER_NAME=cadvisor
CADVISOR_PORT=8090


# Ollama's general configuration
OLLAMA_CONTAINER_NAME=ollama
# Ollama's connection configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
# Ollama's resource configuration
OLLAMA_NUM_PARALLEL=4
OLLAMA_MEMORY=8g
OLLAMA_CPUS=4
# Ollama's volume configuration
VOLUME_OLLAMA="ollama-volume"


# Weaviate's connection configuration
WEAVIATE_HOST=localhost
# Weaviate's authentication configuration
WEAVIATE_AUTH_ENABLED=false
WEAVIATE_USERNAME=weaviate
WEAVIATE_PASSWORD=password
WEAVIATE_ANON_ACCESS=true
# Weaviate's resource configuration
WEAVIATE_MEMORY=4g
WEAVIATE_CPUS=4
WEAVIATE_QUERY_DEFAULTS_LIMIT=25
# Weaviate's volume configuration
WEAVIATE_PERSIST_PATH=/var/lib/weaviate
# Weaviate's modules configuration
WEAVIATE_VECTORIZER=none
WEAVIATE_MODULES=text2vec-openai,generative-openai,text2vec-ollama,generative-ollama


# Neo4j's connection configuration
NEO4J_HOST=localhost
NEO4J_URI="neo4j://"
# Neo4j's authentication configuration
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="password"
# Neo4j's resource configuration
NEO4J_MEMORY=4g
NEO4J_CPUS=4
NEO4J_HEAP_SIZE=1g
NEO4J_PAGECACHE_SIZE=512M


# OpenAI's configuration
OPENAI_API_KEY="sk-"